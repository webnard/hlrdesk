{
  "name": "hlrdesk",
  "version": "0.0.0",
  "description": "HLR Desk",
  "main": "index.js",
  "dependencies": {
    "bluebird": "^2.3.11",
    "byu-cas": "^1.0.1",
    "co": "^4.1.0",
    "koa": "^0.16.0",
    "koa-ejs": "^1.1.2",
    "koa-route": "~2.2.0",
    "koa-session": "2.0.0",
    "koa-socket": "^0.3.0",
    "koa-static": "^1.4.7",
    "moment": "^2.8.4",
    "nodemailer": "1.3.0",
    "pg": "^4.2.0",
    "postgres-gen": "^0.6.0",
    "socket.io": "^1.2.1"
  },
  "devDependencies": {
    "co-mocha": "^1.1.0",
    "expect.js": "^0.3.1",
    "jscs": "1.8.X",
    "mocha": "^1.20.1",
    "node-sass": "^0.9.6"
  },
  "engines": {
    "node": "0.11.x"
  },
  "scripts": {
    "pretest": "$(npm bin)/jscs core --esnext --config=./.jscs.json",
    "test": "$(npm bin)/mocha --require co-mocha --harmony tests/",
    "start": "if [ test -a ~/.pam_environment ]; then (export $(sed 's/#.*//' ~/.pam_environment | tr '\n' ' ') && node --harmony core/app); else node --harmony core/app; fi",
    "postinstall": "bash -c 'if [ \"$HLRDESK_DEV\" = \"true\" ]; then psql -c \"DROP SCHEMA IF EXISTS public cascade ;CREATE SCHEMA public;\"; psql < core/db/schema.sql && psql < core/db/mock-data.sql; fi'",
    "compile-sass": "./.compile-sass.sh",
    "deploy": "./.deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BYU-ODH/hlrdesk.git"
  },
  "keywords": [
    "BYU HLR Desk"
  ],
  "author": "Luke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BYU-ODH/hlrdesk/issues"
  },
  "homepage": "https://github.com/BYU-ODH/hlrdesk"
}
